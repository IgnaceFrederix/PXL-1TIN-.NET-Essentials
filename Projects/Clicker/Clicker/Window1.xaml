<Window x:Class="Clicker.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Clicker"
        mc:Ignorable="d"
        Title="Exit Window" Height="300" Width="400">
    <Grid x:Name="closewindow">
        <Label x:Name="quittext" Content="" HorizontalAlignment="Left" Margin="22,17,0,0" VerticalAlignment="Top" Height="150" Width="238"/>
        <Button x:Name="yesbutton" Content="Yes" HorizontalAlignment="Left" Margin="60,207,0,0" VerticalAlignment="Top" Width="86" Height="24" Click="yesquit"/>
        <Button x:Name="nobutton" Content="No" HorizontalAlignment="Left" Margin="265,207,0,0" VerticalAlignment="Top" Width="86" Height="24" Click="noquit"/>
        <Label x:Name="label" Content="To save the word" HorizontalAlignment="Left" Margin="257,172,0,0" VerticalAlignment="Top" Width="106"/>
        <Label x:Name="label1" Content="To abandon it in its hour of need" HorizontalAlignment="Left" Margin="10,172,0,0" VerticalAlignment="Top" Width="189"/>

    </Grid>
</Window>
