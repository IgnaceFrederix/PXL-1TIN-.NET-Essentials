        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LeerkrachtenWindow" Height="300" Width="300">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="File">
                <MenuItem x:Name="OpenItem" Header="Lees bestanden in"></MenuItem>
            </MenuItem>
        </Menu>
    <Grid Background="Blue" Margin="0,0,-73,-40">
        <Label Content="Administrator" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Foreground="White"/>
        <ListBox x:Name="KlassenListBox" HorizontalAlignment="Left" Height="130" Margin="10,41,0,0" VerticalAlignment="Top" Width="224"/>
        <ListBox x:Name="LeerlingenListBox" HorizontalAlignment="Left" Height="100" Margin="10,189,0,0" VerticalAlignment="Top" Width="224"/>
        <Button x:Name="LogUitButton" Content="Log uit" HorizontalAlignment="Left" Margin="280,269,0,0" VerticalAlignment="Top" Width="75"/>

    </Grid>
    </DockPanel>
</Window>
